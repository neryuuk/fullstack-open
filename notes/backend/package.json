{
  "name": "notes-backend",
  "version": "1.0.0",
  "author": "Nelson Antunes <neryuuk@neryuuk.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env NODE_ENV=development nodemon index.js",
    "build:ui": "rm -rf build && cd ../../part2/notes && npm run build && cp -r build ../../part3/notes",
    "deploy": "fly deploy",
    "deploy:full": "npm run build:ui && npm run lint && npm run test && npm run deploy",
    "lint": "eslint .",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 15000,
    "globalTeardown": "./tests/teardown.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.1",
    "mongoose": "^7.3.4",
    "mongoose-unique-validator": "^4.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.3.3",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": "18.13.0",
    "npm": "9.8.0"
  }
}
